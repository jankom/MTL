#!/bin/bash
. mtl-funcs

showUsage() {
    cat <<EOF
Usage: 
cat doc ~ cats a document last store point
cat doc 1 ~ cats a document's previous point :todo
EOF
}

if [ $# -eq 1 ]; then
    DOC=$(getdoc $1)
    tail -n 1 .mtl/${DOC}.index | awk -F'\t' '{ print ".mtl/d/" $1 }' | xargs cat
else
    showUsage
fi

